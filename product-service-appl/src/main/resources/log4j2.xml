<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%style{%d{HH:mm:ss.SSS}}{blue} [%t] %highlight{%level} - %style{[%c{10}]}{Magenta} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <!-- ROOT -->
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
    <!-- PACKAGE -->
    <Logger level="trace" name="com.rogerpeyer"/>
  </Loggers>
</Configuration>